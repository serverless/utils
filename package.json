{
  "name": "@serverless/utils",
  "version": "2.2.0",
  "description": "Serverless CLI utilities",
  "repository": "serverless/utils",
  "homepage": "https://github.com/serverless/utils#readme",
  "author": "Serverless, Inc.",
  "dependencies": {
    "chalk": "^4.1.0",
    "inquirer": "^7.3.3",
    "js-yaml": "^4.0.0",
    "lodash": "^4.17.20",
    "ncjsm": "^4.1.0",
    "rc": "^1.2.8",
    "type": "^2.1.0",
    "uuid": "^8.3.2",
    "write-file-atomic": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@serverless/eslint-config": "^3.0.0",
    "@serverless/test": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "git-list-updated": "^1.2.1",
    "github-release-from-cc-changelog": "^2.2.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "process-utils": "^4.0.0",
    "sinon": "^9.2.2",
    "standard-version": "^9.1.0"
  },
  "eslintConfig": {
    "extends": "@serverless/eslint-config/node",
    "root": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{css,html,js,json,md,yaml,yml}": [
      "prettier -c"
    ]
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    }
  },
  "mocha": {
    "require": [
      "@serverless/test/setup/patch",
      "@serverless/test/setup/log",
      "@serverless/test/setup/mock-homedir",
      "@serverless/test/setup/mock-cwd",
      "@serverless/test/setup/restore-env"
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      ".github/**",
      "coverage/**",
      "test/**",
      "commitlint.config.js",
      "prettier.config.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ]
  },
  "scripts": {
    "commitlint": "commitlint -f HEAD@{15}",
    "commitlint:pull-request": "commitlint -f HEAD~1",
    "coverage": "nyc npm test",
    "lint": "eslint .",
    "lint:updated": "pipe-git-updated --ext=js -- eslint",
    "prepare-release": "standard-version && prettier --write CHANGELOG.md",
    "prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write",
    "test": "mocha \"test/**/*.js\"",
    "test:isolated": "mocha-isolated \"test/**/*.js\""
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.0"
  },
  "license": "MIT"
}
